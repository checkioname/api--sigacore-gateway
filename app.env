# Configs do Banco de Dados
DB_SOURCE=postgresql://root:secret@localhost:5432/sigacore?sslmode=disable

# Chave simétrica para tokens (deve ter exatamente 32 caracteres)
TOKEN_SYMMETRIC_KEY=12345678901234567890123456789012
ACCESS_TOKEN_DURATION=15m
REFRESH_TOKEN_DURATION=24h

# Endereços dos serviços
AUTH_SERVER_ADDRESS=0.0.0.0:8080
GATEWAY_SERVER_ADDRESS=0.0.0.0:8081

# Serviços de microserviços (exemplo)
USER_SERVICE_ADDRESS=http://localhost:8082
REPORT_SERVICE_ADDRESS=http://localhost:8083
NOTIFICATION_SERVICE_ADDRESS=http://localhost:8084

# Config do Gateway
# Lista de IPs permitidos, separados por vírgula. Use seu IP público se for testar externamente.
ALLOWED_IPS=127.0.0.1